<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testmusicplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
<!--        <activity android:name=".Activity.Main2Activity" android:launchMode="singleTask">//单例模式，只启动一次-->
        <activity android:name=".activity.Main2Activity">
        </activity>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AudioPlayerActivity" android:launchMode="singleTask"/>//单例模式防止创建多次
        <service android:name=".service.MusicPlayerService">
            <intent-filter>
                <action android:name="com.example.musicplayer_OPENAUDIO"/>
            </intent-filter>
        </service>
    </application>

</manifest>