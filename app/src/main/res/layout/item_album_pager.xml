<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ly_album_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_album_icon_albumPager1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/album_icon_press"/>
        <TextView
            android:id="@+id/tv_name_albumPager1"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="20sp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="AlbumName"/>
        <TextView
            android:id="@+id/tv_artist_albumPager1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="11sp"
            android:text="Artist"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_album_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_album_icon_albumPager2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/album_icon_press"/>
        <TextView
            android:id="@+id/tv_name_albumPager2"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="AlbumName"/>
        <TextView
            android:id="@+id/tv_artist_albumPager2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="11sp"
            android:text="Artist"/>
    </LinearLayout>

</LinearLayout>
