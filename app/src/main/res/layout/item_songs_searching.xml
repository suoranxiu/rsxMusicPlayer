<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingTop="6dp"
    android:paddingRight="12dp"
    android:paddingBottom="3dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_album_icon_searchSong"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/album_icon_press" />
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_album_icon_searchSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name_searchSong"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="MusicName"/>
        <TextView
            android:id="@+id/tv_artist_searchSong"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:textColor="#585757"
            android:textSize="14sp"
            android:text="Artist"/>
        <TextView
            android:id="@+id/tv_albumName_searchSong"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:textColor="#585757"
            android:textSize="14sp"
            android:text="Album"/>
        <View
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#000000"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>

</LinearLayout>
