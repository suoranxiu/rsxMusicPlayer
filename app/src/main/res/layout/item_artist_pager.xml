<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingLeft="6dp"
    android:paddingTop="3dp"
    android:paddingRight="12dp"
    android:paddingBottom="3dp"
    android:layout_height="wrap_content">

    <com.example.testmusicplayer.view.CircleImageView
        android:id="@+id/iv_portrait_artist_pager"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/artist_icon" />

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_portrait_artist_pager"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name_artistPager"
            android:layout_width="match_parent"
            android:layout_height="26sp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="17sp"
            android:text="artist"/>
        <View
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#000000"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</LinearLayout>
