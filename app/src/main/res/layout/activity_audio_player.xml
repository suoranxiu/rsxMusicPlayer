<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_return_line"
        android:layout_width="135dp"
        android:layout_height="2.9dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/return_line_selector"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/iv_album_playing"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/album_icon"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:orientation="vertical">
        <TextView
        android:id="@+id/tv_name_playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25sp"
        android:text="MusicName"/>
        <TextView
            android:id="@+id/tv_artist_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#585757"
            android:textSize="16sp"
            android:text="Artist"/>
        <ProgressBar
            android:id="@+id/pb_playing"
            android:layout_marginTop="13dp"
            android:layout_width="320dp"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time_playing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
            <TextView
                android:id="@+id/tv_time_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:24"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>